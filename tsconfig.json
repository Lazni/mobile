{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "@api": ["./api"],
      "@contexts": ["./contexts"],
      "@components": ["./components"],
      "@constants": ["./constants"],
      "@hooks": ["./hooks"],
      "@navigation": ["./navigation"],
      "@screens": ["./screens"],
      "@store": ["./store"],
      "@types": ["./types"],
      "@theme": ["./theme"],
      "@validation": ["./validation"],
      "@gifs": ["./assets/gifs"],
      "@pngs": ["./assets/pngs"],
      "@svgs": ["./assets/svgs"]
    },
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "*"],
  "exclude": ["node_modules"]
}
